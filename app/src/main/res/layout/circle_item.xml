<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:background="@drawable/qz_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:id="@+id/circleitem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle_user_txpicture"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/circle_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="11111"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/circle_user_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="1111"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/circle_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1111111111111"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/circle_user_picture"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"
        android:layout_margin="@dimen/dp_45"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <CheckBox
                android:id="@+id/circle_dianzan_img"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:button="@drawable/dzclick"
                android:layout_margin="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/circle_dianzan_num"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="1111111"
                android:gravity="center"
                android:textSize="@dimen/dp_15"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
